<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cleverpixel.catchapple"
    android:versionCode="3"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/j1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.cleverpixel.catchapple.SplashActivity"
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.cleverpixel.catchapple.MainMenu"
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.cleverpixel.catchapple.Level1Activity"
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.cleverpixel.catchapple.Level2Activity"
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:label="@string/app_name" >
        </activity>
        
        <service android:name="com.cleverpixel.catchapple.PlayBoing" android:enabled="true"></service>
		<service android:name="com.cleverpixel.catchapple.PlayBonus" android:enabled="true"></service>
		<service android:name="com.cleverpixel.catchapple.PlayPac"   android:enabled="true"></service>
		<service android:name="com.cleverpixel.catchapple.PlayMusic" android:enabled="true"></service>
		<service android:name="com.cleverpixel.catchapple.PlayBlop"  android:enabled="true"></service>
    </application>

</manifest>
